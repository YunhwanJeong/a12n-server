<form action="{{ action }}" method="post">
  {{# if msg}}
  <div class="msg info">{{ msg }}</div>
  {{/if}}
  {{# if error}}
  <div class="msg error">{{ error }}</div>
  {{/if}}

  <input type="hidden" name="secret" value="{{secret}}" />
  <input type="hidden" name="csrf-token" value="{{csrf-token}}" />
  <fieldset>
    <div class="qrcode">
      <div>
        Scan QR code with authenticator app
      </div>
      <img src="{{qrCode}}"/>
      <div>Or manually enter secret</div>
      <div class="secret">{{secret}}</div>
    </div>
  </fieldset>

  <fieldset>
    <label for="code">
      <span>Enter generated code</span>
      <input name="code" id="code" required="required" minlength="6" maxlength="6" size="6" autofocus type="text" inputmode="numeric" pattern="[0-9]{6}" autocomplete="one-time-code"/>
    </label>

    <label>
      <button type="submit">Setup Device</button>
    </label>
    <p class="form-options">
      <a href="/login?msg=Registration+successful.+Please log in">Don't add device</a>
    </p>
  </fieldset>

</form>
